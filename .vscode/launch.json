    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'processor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=processor",
                    "--package=processor"
                ],
                "filter": {
                    "name": "processor",
                    "kind": "bin"
                }
            },
            "args": [
                "--wiktextract-path=${workspaceFolder}/data/test/descendants.jsonl",
                "--serialization-path=${workspaceFolder}/data/test_output/wety.json.gz",
                "--turtle-path=${workspaceFolder}/data/test_output/wety.ttl",
                "--store-path=${workspaceFolder}/data/test_output/wety.db",
                "--embeddings-cache-path=${workspaceFolder}/data/test_output/embeddings_cache"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'processor'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=processor",
                    "--package=processor"
                ],
                "filter": {
                    "name": "processor",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}